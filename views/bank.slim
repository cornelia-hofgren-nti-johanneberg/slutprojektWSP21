header
    h1 class="titel" Receptbank 
    img id="icon1" src="/icon.svg"
main id="main"

    article 
        h1 förrätt
        article class="scroller"
            - recept.each do |item|
                - if item["cg_id"] == 1
                    div
                        img src="#{item[:picture]}" alt=""/
                        div 
                            h3 = item["name"]
                            p = item["description"]
                            div 
                                p 30 favoritmarkeringar 
                                form action="recept/add" method="POST" 
                                    input type="submit" id="submit" value="Heart" 
                                    input type="number" style="display:none" value=item["id"] id="id" name="id"

